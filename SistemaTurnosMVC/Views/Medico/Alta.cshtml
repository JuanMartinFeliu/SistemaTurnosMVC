@using SistemaTurnosMVC.ViewModels
@model MedicoCreateViewModel

@{
    ViewData[index: "Title"] = "Crear Medico";
}

<form asp-controller="Medico" asp-action="Alta" method="post">
    <div class="form-group">
        <label asp-for="@Model.Nombre" class="control-label"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Apellido" class="control-label"></label>
        <input asp-for="@Model.Apellido" class="form-control" />
        <span asp-validation-for="@Model.Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.DNI" class="control-label"></label>
        <input asp-for="@Model.DNI" class="form-control" />
        <span asp-validation-for="@Model.DNI" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Matricula" class="control-label"></label>
        <input asp-for="@Model.Matricula" class="form-control" />
        <span asp-validation-for="@Model.Matricula" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Especialidad" class="control-label"></label>
        <select asp-for="Especialidad" asp-items="@Model.ListaEspecialidad" class="form-control">
            <option value="">-- Seleccione un Sexo --</option>
        </select>
        <span asp-validation-for="Especialidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Telefono" class="control-label"></label>
        <input asp-for="@Model.Telefono" class="form-control" />
        <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email" class="control-label"></label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.PrecioConsulta" class="control-label"></label>
        <input asp-for="@Model.PrecioConsulta" class="form-control" />
        <span asp-validation-for="@Model.PrecioConsulta" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Crear</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}