@model List<Paciente>

@{
    ViewData["Title"] = "Listado de Libros";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Listado de Pacientes</h1>
        <a asp-action="Alta" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Paciente
        </a>
    </div>
    <div class="card mb-4">
    <div class="card-body">
        <form asp-action="Filtro" method="get" class="row g-3 align-items-center">
            <div class="col-auto">
                <label class="col-form-label">Filtrar por Sexo:</label>
            </div>
            <div class="col-auto">
                <select name="sexo" class="form-select">
                    <option value="">-- Todos --</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Filtrar</button>
                <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
            </div>
        </form>
    </div>
</div>

    <table class="table table-striped table-hover border">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>DNI</th>
                <th>Fecha de Nacimiento</th>
                <th>Sexo</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Direccion</th>
                <th>ObraSocial</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdPaciente</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.DNI</td>
                    <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                    <td>@item.Sexo</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td>@item.Direccion</td>
                    <td>@item.ObraSocial</td>
                    <td class="text-center">
                        <a asp-action="Modificar" asp-route-id="@item.IdPaciente" class="btn btn-primary btn-sm">
                            Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdPaciente" class="btn btn-danger btn-sm">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>